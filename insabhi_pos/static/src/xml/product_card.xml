<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
        <t t-name="pos_products_card_inherit.ProductCard"  t-inherit="point_of_sale.ProductCard" t-inherit-mode="extension">
             <xpath expr="//div[@class='overflow-hidden lh-sm fw-bolder product-name']" position="after">
<!--                   <div>Unique ID</div>-->
                  <t t-debug="pdb"></t>
                 <span t-if="props.uniqueID" class="price-tag text-primary py-1 fw-bolder"
                    t-esc="props.uniqueID" />
                 <span t-if="props.shippingMethod" class="price-tag text-primary py-1 fw-bolder"
                    t-esc="props.shippingMethod" />
             </xpath>

        </t>
</templates>